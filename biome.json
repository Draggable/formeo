{
  "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/test-results",
      "!**/playwright-report",
      "!**/src/demo/index.html"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "error",
        "noUnusedFunctionParameters": "warn"
      },
      "suspicious": {
        "noImplicitAnyLet": "error",
        "noThenProperty": "off",
        "noConsole": { "level": "off", "options": { "allow": ["warn", "error", "info", "debug"] } }
      },
      "complexity": {
        "useLiteralKeys": "error",
        "noUselessFragments": "error"
      },
      "style": {
        "recommended": true,
        "useConsistentArrayType": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "includes": ["**"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "trailingCommas": "es5",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  }
}
