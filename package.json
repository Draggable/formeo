{
  "name": "formeo",
  "version": "0.1.0",
  "main": "dist/formeo.min.js",
  "files": [
    "dist/formeo.min.js",
    "dist/formeo.min.css"
  ],
  "homepage": "http://kevinchappell.github.io/formeo/",
  "repository": {
    "type": "git",
    "url": "http://github.com/kevinchappell/formeo"
  },
  "author": "Kevin Chappell <kevin.b.chappell@gmail.com>",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/kevinchappell/formeo/issues"
  },
  "description": "A zero dependency JavaScript module for drag and drop form creation.",
  "keywords": [
    "drag and drop",
    "form builder",
    "form maker",
    "forms"
  ],
  "license": "MIT",
  "ignore": [
    "**/*",
    "node_modules",
    "test"
  ],
  "config": {
    "files": {
      "test": [
        "test/**/*.spec.js"
      ],
      "formeo": {
        "js": "src/js/formeo.js",
        "icons": "src/icons/**/*.svg",
        "fonts": "src/fonts/fontello",
        "sass": [
          "src/sass/formeo.scss"
        ]
      },
      "site": [
        "demo/assets/sass/site.scss"
      ]
    },
    "fontServer": "http://fontello.com"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "prestart": "npm update",
    "icons": "webpack --icons && cp -b dist/formeo-sprite.svg public/assets/img",
    "build": "webpack --progress -p --colors",
    "lint": "eslint ./src/js --ext .js || true",
    "test": "mocha --compilers js:babel-register && webpack -p --bail",
    "dev": "webpack -d | webpack-dev-server -d --hot --inline"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "css-loader": "^0.23.1",
    "deep-extend": "^0.4.1",
    "eslint": "^2.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.2",
    "sass-loader": "^3.2.0",
    "sortablejs": "git@github.com:kevinchappell/Sortable.git",
    "style-loader": "^0.13.1",
    "uuid-v4": "^0.1.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-svgstore-plugin": "^2.1.5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0,
      "new-cap": 0,
      "strict": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "engines": {}
}
